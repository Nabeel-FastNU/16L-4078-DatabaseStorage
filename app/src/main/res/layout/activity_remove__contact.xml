<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Remove_Contact">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="199dp"
        android:layout_height="200dp"
        android:layout_marginStart="106dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="106dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/man" />

    <EditText
        android:id="@+id/remTxt"
        android:layout_width="208dp"
        android:layout_height="45dp"
        android:layout_marginTop="84dp"
        android:inputType="textPersonName"
        android:hint="Enter Name"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/removeBtn"
        android:layout_width="212dp"
        android:layout_height="45dp"
        android:layout_marginTop="36dp"
        android:text="Remove Account"
        android:background="@drawable/button_style"
        app:layout_constraintEnd_toEndOf="@+id/remTxt"
        app:layout_constraintStart_toStartOf="@+id/remTxt"
        app:layout_constraintTop_toBottomOf="@+id/remTxt" />
</androidx.constraintlayout.widget.ConstraintLayout>